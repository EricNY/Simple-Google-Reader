{{#each articles}}
  {{#if name}}

    <li class='article-li'>
      <div class='hover article panel panel-default' id="article{{id}}" style='margin-left: 0px'>
        <div class='hover panel-heading' id='article-link'>
          <h4 class="panel-title">
            <a id='art' class='article-link hover' data-article-id='{{id}}' href='#articles/{{id}}' style='text-decoration:none;'>{{publication_name}}: <b>{{name}}</b></a>
          </h4>
        </div>
      </div>

      <div class='content'></div>

    </li>

  {{/if}}
{{/each}}
